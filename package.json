{
  "name": "algo-trade-bot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "vite build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "backend": "tsx watch src/backend/server.ts",
    "start": "concurrently \"npm run backend\" \"npm run dev\"",
    "setup:database": "tsx scripts/setup-database.ts --create-database --test-connection --verbose",
    "setup:database:quick": "tsx scripts/setup-database.ts",
    "migrate": "tsx scripts/run-migration.ts migrate --validate",
    "migrate:status": "tsx scripts/run-migration.ts status",
    "migrate:dry-run": "tsx scripts/run-migration.ts migrate --dry-run",
    "db:health": "curl -s http://localhost:3001/api/health/database | jq .",
    "db:backup": "tsx -e \"import {DatabaseSetup, getDefaultDatabaseConfig} from './src/backend/database/DatabaseSetup.js'; const db = new DatabaseSetup(getDefaultDatabaseConfig()); await db.initialize(); await db.performBackup(); await db.close();\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
